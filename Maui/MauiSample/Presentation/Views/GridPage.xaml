                </RefreshView>
            </taskLoaderView:TaskLoaderView>

            <StackLayout
                BackgroundColor="{StaticResource DarkSurface}"
                Orientation="Vertical"
                Shadow="{StaticResource DarkBottomShadow}"
                Spacing="0">
                <StackLayout.Padding>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="iOS">20, 60, 20, 20</On>
                        <On Platform="Android">20, 40, 20, 20</On>
                    </OnPlatform>
                </StackLayout.Padding>

                <Grid ColumnDefinitions="60,*, 60" RowDefinitions="Auto,Auto, 40">
                    <ImageButton
                        Grid.RowSpan="2"
                        BackgroundColor="{StaticResource DarkSurface}"
                        Command="{Binding GoBackCommand}"
                        HeightRequest="40"
                        Source="leftarrow.png"
                        VerticalOptions="Center" />

                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        FontAttributes="Italic"
                        FontSize="22"
                        Text="Sharpnado's"
                        TextColor="{StaticResource Accent}" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,-10,0,0"
                        FontAttributes="Bold"
                        FontSize="30"
                        Text="CollectionView"
                        TextColor="White" />

                    <Switch
                        x:Name="DragAndDropSwitch"
                        Grid.RowSpan="2"
                        Grid.Column="2" />

                    <StackLayout
                        x:Name="ColumnCountContainer"
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Margin="0,0,10,0"
                        HorizontalOptions="End"
                        Orientation="Horizontal"
                        VerticalOptions="End">
                        <Label
                            Margin="0,0,0,2"
                            Text="Column Count"
                            TextColor="White"
                            VerticalTextAlignment="Center" />
                        <Picker
                            x:Name="ColumnPicker"
                            BackgroundColor="{StaticResource DarkerSurface}"
                            FontAttributes="Bold"
                            FontSize="15"
                            HorizontalTextAlignment="Center"
                            TextColor="White"
                            WidthRequest="50" />
                    </StackLayout>

                </Grid>

                <Border
                    Margin="0,10,0,10"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Shadow="{StaticResource DarkNeumorphismTop}"
                    StrokeShape="RoundRectangle 25"
                    VerticalOptions="EndAndExpand"
                    WidthRequest="280">
                    <sho:TabHostView
                        x:Name="TabHost"
                        BackgroundColor="{StaticResource DarkSurface}"
                        CornerRadius="25"
                        IsSegmented="True"
                        SelectedIndex="{Binding Mode, Converter={converters:ListModeToInt}, Mode=TwoWay}"
                        Shadow="{StaticResource DarkNeumorphismBottom}"
                        TabType="Fixed">
                        <sho:TabHostView.Tabs>
                            <sho:UnderlinedTabItem Label="Grid" Style="{StaticResource SegmentedTabStyle}" />
                            <sho:UnderlinedTabItem Label="Horizontal" Style="{StaticResource SegmentedTabStyle}" />
                            <sho:UnderlinedTabItem Label="Vertical" Style="{StaticResource SegmentedTabStyle}" />
                        </sho:TabHostView.Tabs>
                    </sho:TabHostView>
                </Border>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>
