<?xml version="1.0" encoding="utf-8" ?>
<Border
    x:Class="MauiSample.Presentation.Views.SillyGridCell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:MauiSample.Presentation.ViewModels"
    x:DataType="viewModels:SillyDudeVmo"
    HeightRequest="70"
    HorizontalOptions="Center"
    StrokeShape="RoundRectangle 35"
    VerticalOptions="Center"
    WidthRequest="70">
    <Image
        Aspect="AspectFill"
        Source="{Binding ImageUrl}"
        Style="{StaticResource Avatar}" />
</Border>